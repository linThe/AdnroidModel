<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="请输入歌曲路径"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:layout_marginTop="20dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[6]" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_play"
                android:layout_marginBottom="9dp"
                android:layout_weight="1"
                android:drawableTop="@android:drawable/ic_media_play"
                android:gravity="center_horizontal"
                android:text="pause" />

            <TextView
                android:id="@+id/tv_pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_play"
                android:layout_marginBottom="9dp"
                android:layout_weight="1"
                android:drawableTop="@android:drawable/ic_media_pause"
                android:gravity="center_horizontal"
                android:text="pause" />

            <TextView
                android:id="@+id/tv_replay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="54dp"
                android:layout_weight="1"
                android:drawableTop="@android:drawable/ic_menu_revert"
                android:gravity="center_horizontal"
                android:text="TextView"
                tools:text="replay" />

            <TextView
                android:id="@+id/tv_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_replay"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:drawableTop="@android:drawable/ic_media_pause"
                android:gravity="center_horizontal"
                android:text="stop" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>